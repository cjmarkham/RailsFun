<div class="jumbotron">
    <div class="container">

        <% if flash[:errors] %>
            <% flash[:errors].each do |error| %>
                <p class="alert alert-danger">
                    <%= error %>
                </p>
            <% end %>
        <% end %>

        <%= form_for :person, url: person_path, method: :put, html: { class: 'form-horizontal' } do |form| %>
            <div class="form-group">
                <%= form.label :name, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :name, :required => true, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :address_1, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :address_1, :required => true, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :address_2, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :address_2, :required => true, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :county, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :county, :required => true, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :post_code, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-2">
                    <%= form.text_field :post_code, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <%= form.submit :class => 'btn btn-success' %>
                </div>
            </div>
        <% end %>
    </div>
</div>