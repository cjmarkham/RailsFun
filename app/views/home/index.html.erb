<div class="jumbotron">
    <div class="container text-center">
        <h1>Create a new person</h1>
        <br />
        <%= form_for :person, url: people_path, html: {class: 'form-horizontal text-left'} do |form| %>
            <div class="form-group">
                <%= form.label :name, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :name, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :address_1, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :address_1, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :address_2, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :address_2, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :county, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-9">
                    <%= form.text_field :county, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <%= form.label :post_code, :class => 'col-sm-3 control-label' %>
                <div class="col-sm-2">
                    <%= form.text_field :post_code, :class => 'form-control' %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <%= form.submit :class => 'btn btn-success' %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Created at</td>
                <td class="text-center">Options</td>
            </tr>
        </thead>
        <tbody>
            <% @new_people.each do |p| %>
                <tr>
                    <td>
                        <%= p.name %>
                    </td>
                    <td>
                        <%= p.created_at.strftime('%d-%m-%Y, %H:%M %p') %>
                    </td>
                    <td class="text-center" width="100">
                        <a title="Delete" data-toggle="tooltip" href="/people/<%= p.id %>/delete">
                            <em class="fa fa-times"></em>
                        </a>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>    
</div>